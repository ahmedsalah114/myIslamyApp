<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="@drawable/main_bg">
    <ImageView
        android:id="@+id/hadeath_iv"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".9"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".3"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/hadeath_pic"
        android:adjustViewBounds="true"
        />
    <View
        android:id="@+id/hadeath_view1"
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@+id/hadeath_iv"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/primaryColor"
        />
    <TextView
        android:id="@+id/alhadeath_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/hadeath_view1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/al_ahadeath"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:padding="10dp"
        />
    <View
        android:id="@+id/hadeath_view2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@+id/alhadeath_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/primaryColor"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hadeath_titles_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/hadeath_view2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:listitem="@layout/item_hadeath_name"

        />

</androidx.constraintlayout.widget.ConstraintLayout>